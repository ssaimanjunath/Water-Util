<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <TextView
                android:gravity="center"
                android:background="@drawable/violet_circle"
                android:padding="5dp"
                android:text="1"
                android:id="@+id/noofday"
                android:textColor="#fff"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateofmon"
                android:layout_marginTop="25dp"
                android:textColor="@color/colorPrimary"
                android:text="01-01-2018"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_toEndOf="@+id/noofday"/>
            <TextView
                android:id="@+id/amt_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:capitalize="characters"
                android:text="Amount"
                android:layout_toEndOf="@id/dateofmon"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="75dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>noofday,

</LinearLayout>
