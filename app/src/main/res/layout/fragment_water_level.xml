<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.heisenberg.waterutil.WaterLevel">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/water_level"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            custom:arc_bottom_text="WATER LEFT"
            custom:arc_bottom_text_size="20dp"
            custom:arc_progress="20"
            custom:arc_stroke_width="10dp"
            custom:arc_suffix_text_size="25dp"
            custom:arc_text_color="@color/white"
            custom:arc_text_size="60dp" />
    </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
